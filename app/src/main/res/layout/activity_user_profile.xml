<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectbored.app.UserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/username"
                android:textColor="#F24970"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/email"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/stories_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stories"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stories" />

                <TextView
                    android:id="@+id/stories_read"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/stories_viewed_text"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stories_viewed" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/distance_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/walk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/man_walk" />

                <TextView
                    android:id="@+id/kilometeres_covered"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/kilometres_covered_text"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/kilometres_covered" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stories_posted_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/upload"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/upload" />

                <TextView
                    android:id="@+id/stories_posted"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/stories_posted_text"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/stories_posted" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/views_received_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/green_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/green_eye" />

                <TextView
                    android:id="@+id/views_received"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/views_received_text"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/views_received" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/upvotes_given_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/like" />

                <TextView
                    android:id="@+id/upvotes_given"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/upvotes_given_text"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/upvotes_given" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/upvotes_received_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/give_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/get_likes" />

                <TextView
                    android:id="@+id/upvotes_received"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/upvotes_received_text"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/upvotes_received" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/user_end_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/user_end_message"
            android:textColor="#F24970"
            android:textSize="21sp" />

        <Button
            android:id="@+id/invite_friends_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundishbutton"
            android:padding="8dp"
            android:fontFamily="monospace"
            android:text="@string/invite_friends"
            android:textColor="#fafafa" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
