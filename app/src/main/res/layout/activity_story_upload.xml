<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectbored.app.StoryUpload">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="@+id/2"
        tools:layout_editor_absoluteX="-329dp"
        tools:layout_editor_absoluteY="-488dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/story_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha" />

        <EditText
            android:id="@+id/story_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Insert Caption Here"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/uploadstory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Story" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
