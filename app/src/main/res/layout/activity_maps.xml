<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".MapsActivityCurrentPlace">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.projectbored.app.MapsActivityCurrentPlace" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="vertical">

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/multiple_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                fab:fab_addButtonColorNormal="#5ec4d3"
                fab:fab_addButtonColorPressed="#52adba"
                fab:fab_addButtonPlusIconColor="#ffffff"
                fab:fab_addButtonSize="mini"
                fab:fab_labelStyle="@style/menu_labels_style">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="#8647c7"
                    fab:fab_colorPressed="#540d9d"
                    fab:fab_icon="@drawable/compass"
                    fab:fab_size="mini"
                    fab:fab_title="Explore" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="#c6f54a"
                    fab:fab_colorPressed="#9fdb01"
                    fab:fab_icon="@drawable/ic_fab_star"
                    fab:fab_size="mini"
                    fab:fab_title="Add Event" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_story"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="#f14970"
                    fab:fab_colorPressed="#d50132"
                    fab:fab_icon="@drawable/pen"
                    fab:fab_size="mini"
                    fab:fab_title="Add Story" />

            </com.getbase.floatingactionbutton.FloatingActionsMenu>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/maps_navigation_items" />
</android.support.v4.widget.DrawerLayout>